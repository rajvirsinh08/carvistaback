{
  "compilerOptions": {
    "baseUrl": ".", // Set the base directory
    "paths": {
      "Model/*": ["src/Model/*"] // Alias the Model directory
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
, "index.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
